
<body class="allpets">


<div class="container search">

<h4><%=link_to("List a New Pet", new_pet_path)%></h4>
  <h4>Search</h4>
    <%= form_tag(pets_path, method: :get) do %>
      <%= select_tag 'search', options_for_select(@pets.collect{ |p| [p.category] }.uniq!.insert(0, "Select a Pet Type")) %><br>
      <%= submit_tag ("Search Pets") %>
    <% end %>
</div>

<div class="superpets">
  <ul>
    <%@pets.each do |pet|%>
      <li><%= link_to(pet.name, pet_path(pet))%></li>
    <%end%>
  </ul>
  <h5><%=link_to("View All Pets", pets_path)%></h5>
</div>
</body>
